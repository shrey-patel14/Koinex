<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/brown"
    android:padding="20dp"
    app:layout_constraintWidth_percent="0.4">

    <TextView
        android:id="@+id/ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/portfolioCoinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coin Name"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/portfolioCoinImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portfolioCoinName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/portfolioTotalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Total Value"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/middleGuideline"
        app:layout_constraintTop_toBottomOf="@id/portfolioCoinImage" />

    <TextView
        android:id="@+id/portfolioTotalProfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Total Profit"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/middleGuideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portfolioCoinImage" />

    <TextView
        android:id="@+id/portfolioTotalValuev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLength="6"
        android:maxLines="1"
        android:text="$value value"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/middleGuideline"

        app:layout_constraintTop_toBottomOf="@id/portfolioTotalValue" />

    <TextView
        android:id="@+id/portfolioTotalProfitv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLength="8"
        android:maxLines="1"
        android:text="profit value"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/middleGuideline"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/portfolioTotalProfit" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <TextView
        android:id="@+id/portfolioCoinsOwned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="No. Owned"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/middleGuideline"
        app:layout_constraintTop_toBottomOf="@id/portfolioTotalValuev" />

    <TextView
        android:id="@+id/portfolioCoinsBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Buy Price"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portfolioTotalProfitv" />

    <TextView
        android:id="@+id/portfolioCoinsOwnedv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLength="8"
        android:maxLines="1"
        android:text="no. val"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/middleGuideline"
        app:layout_constraintTop_toBottomOf="@id/portfolioCoinsOwned" />

    <TextView
        android:id="@+id/portfolioCoinsBPv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLength="8"
        android:maxLines="1"
        android:text="bp v"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/middleGuideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portfolioCoinsBP" />


</androidx.constraintlayout.widget.ConstraintLayout>