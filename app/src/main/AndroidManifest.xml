<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crypto.Koinex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.crypto.Koinex.Rewards"
            android:exported="false"
            android:parentActivityName="com.crypto.Koinex.PortfolioActivity">
        </activity>
        <activity
            android:name="com.crypto.Koinex.ForgotPassword"
            android:exported="false" />
        <activity
            android:name="com.crypto.Koinex.RegisterPage"
            android:exported="false" />
        <activity android:name="com.crypto.Koinex.LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.crypto.Koinex.MainActivity"></activity>
        <activity android:name="com.crypto.Koinex.CoinDetailsActivity" />
        <activity android:name="com.crypto.Koinex.PortfolioActivity" />
    </application>

</manifest>